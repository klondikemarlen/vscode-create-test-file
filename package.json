{
  "name": "vscode-create-test-file",
  "displayName": "vscode-create-test-file",
  "description": "Create empty test file with inferred location",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.createTestFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.createTestFile",
        "title": "Create Test File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createTestFile",
          "when": "!explorerResourceIsFolder"
        }
      ],
      "editor/title/context": [
        {
          "command": "extension.createTestFile"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Create Test File Configuration",
      "properties": {
        "createTestFile.nameTemplate": {
          "type": "string",
          "default": "test_{filename}",
          "description": "Template for filename of created test files"
        },
        "createTestFile.languages": {
          "type": "object",
          "description": "Block that contains config for specific languages",
          "default": {},
          "additionalProperties": false,
          "patternProperties": {
            "^\\[\\w+\\]$": {
              "type": "object",
              "description": "Config for specific languages",
              "additionalProperties": false,
              "properties": {
                "createTestFile.nameTemplate": {
                  "type": "string",
                  "default": "test_{filename}",
                  "description": "Template for filename of created test files"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
